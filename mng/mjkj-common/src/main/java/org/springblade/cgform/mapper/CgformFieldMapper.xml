    </resultMap>

    <!-- 执行查询语句返回一个map -->
    <select id="queryOneByTableNameAndId" parameterType="java.lang.String" resultType="map">
		select * from ${tbname} where id = #{dataId}
	</select>

    <select id="getBlobCou" resultType="int">
            SELECT
                count( id )
            FROM
                onl_cgform_field
            WHERE
            is_deleted = 0
            AND cgform_head_id = #{headId}
            AND db_type IN ('Blob')
    </select>

</mapper>
