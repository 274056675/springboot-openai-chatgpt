<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.cgform.mapper.DictMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="dictResultMap" type="org.springblade.cgform.entity.SysDict">
        <result column="id" property="id"/>
        <result column="create_user" property="createUser"/>
        <result column="create_dept" property="createDept"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="status" property="status"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="dict_name" property="dictName"/>
        <result column="dict_code" property="dictCode"/>
        <result column="description" property="description"/>
        <result column="type" property="type"/>
    </resultMap>


    <!--通过查询指定table的 text code 获取字典-->
    <!--需求迭代, 按创建时间倒序-->
    <select id="queryTableDictItemsByCode"  resultType="org.springblade.cgform.model.DictModel">
		   select ${text} as "text",${code} as "value" from ${table} where is_deleted =0 order by create_time desc
	</select>

    <!-- 通过字典code获取字典数据 -->
    <select id="queryDictItemsByCode" parameterType="String"  resultType="org.springblade.cgform.model.DictModel">
		   select s.item_value as "value",s.item_text as "text" from sys_dict_item s
		   where  is_deleted =0 and dict_id = (select id from sys_dict where dict_code = #{code})
		   order by s.sort_order asc
	</select>

    <!--通过查询指定table的 text code 获取字典（指定查询条件）-->
    <select id="queryTableDictItemsByCodeAndFilter" resultType="org.springblade.cgform.model.DictModel">
        select ${text} as "text",${code} as "value" from ${table} where is_deleted =0
        <if test="filterSql != null and filterSql != ''">
            and ${filterSql}
        </if>
    </select>

    <!-- 根据表名、显示字段名、存储字段名、父ID查询树 -->
    <select id="queryTreeList" parameterType="Object" resultType="org.springblade.cgform.model.TreeSelectModel">
        select ${text} as "title",
        ${code} as "key",
        <if test="hasChildField != null and hasChildField != ''">
            (case when ${hasChildField} = '0' then 0 else 1 end) as isLeaf,
        </if>
        ${pidField} as parentId
        from ${table}
        where
        is_deleted =0
        <choose>
            <when test="pid != null and pid != ''">
                and ${pidField} = #{pid}
            </when>
            <otherwise>
                and (${pidField} = '' OR ${pidField} IS NULL)
            </otherwise>
        </choose>
        <if test="query!= null">
            <foreach collection="query.entrySet()" item="value"  index="key" >
                and ${key} = #{value}
            </foreach>
        </if>
    </select>

    <!--通过查询指定table的 text code key 获取字典值，包含value-->
    <select id="queryTableDictByKeys" parameterType="String" resultType="org.springblade.cgform.model.DictModel">
        select ${text} as "text", ${code} as "value" from ${table} where is_deleted =0 and ${code} in
        <foreach item="key" collection="keyArray" open="(" separator="," close=")">
            #{key}
        </foreach>
    </select>

    <select id="getIdByCode" resultType="long">
        select id from sys_category where code =#{code} limit 1
    </select>

    <!--通过查询指定table的 text code 获取字典数据，且支持关键字查询 -->
    <select id="queryTableDictItems" parameterType="String"  resultType="org.springblade.cgform.model.DictModel">
		select ${text} as "text",${code} as "value" from ${table} where ${text} like #{keyword} and is_deleted =0
	</select>


    <!-- 重复校验 sql语句 -->
    <select id="duplicateCheckCountSql" resultType="Long" parameterType="org.springblade.cgform.model.DuplicateCheckVo">
		SELECT COUNT(*) FROM ${tableName} WHERE ${fieldName} = #{fieldVal} and id &lt;&gt; #{dataId}
	</select>

    <!-- 重复校验 sql语句 -->
    <select id="duplicateCheckCountSqlNoDataId" resultType="Long" parameterType="org.springblade.cgform.model.DuplicateCheckVo">
		SELECT COUNT(*) FROM ${tableName} WHERE ${fieldName} = #{fieldVal}
	</select>

    <select id="getAllTenantList" resultType="map">
        select tenant_id,tenant_name from blade_tenant where is_deleted=0
    </select>

</mapper>
